<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".demo.TextOneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="主图"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/maText"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="MA"
            android:textColor="@color/font_text_selector" />


        <TextView
            android:id="@+id/bollText"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="BOLL"
            android:textColor="@color/font_text_selector" />

        <TextView
            android:id="@+id/mainHide"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="隐藏"
            android:textColor="@color/font_text_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="副图"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/macdText"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="MACD"
            android:textColor="@color/font_text_selector" />


        <TextView
            android:id="@+id/kdjText"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="KDJ"
            android:textColor="@color/font_text_selector" />

        <TextView
            android:id="@+id/rsiText"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="RSI"
            android:textColor="@color/font_text_selector" />


        <TextView
            android:id="@+id/wrText"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="WR"
            android:textColor="@color/font_text_selector" />

        <TextView
            android:id="@+id/subHide"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="隐藏"
            android:textColor="@color/font_text_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/fenText"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="分时"
            android:textColor="@color/font_text_selector" />

        <Button
            android:id="@+id/kText"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="k线图"
            android:textColor="@color/font_text_selector" />
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/text"
            android:visibility="gone"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#17181f" />

    <com.github.fujianlian.klinechart.KLineChartView
        android:id="@+id/kLineChartView"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible"
        app:kc_background_color="@color/main_head_bg"
        app:kc_candle_line_width="1dp"
        app:kc_candle_solid="true"
        app:kc_candle_width="4dp"
        app:kc_d_color="@color/chart_ma10"
        app:kc_dea_color="@color/chart_ma10"
        app:kc_dif_color="@color/chart_ma5"
        app:kc_dn_color="@color/chart_ma20"
        app:kc_grid_line_color="@color/color_font_kline"
        app:kc_grid_line_width="0.5dp"
        app:kc_j_color="@color/chart_ma20"
        app:kc_k_color="@color/chart_ma5"
        app:kc_line_width="@dimen/chart_line_width"
        app:kc_ma10_color="@color/chart_ma10"
        app:kc_ma20_color="@color/chart_ma20"
        app:kc_ma5_color="@color/chart_ma5"
        app:kc_macd_color="@color/chart_ma20"
        app:kc_macd_width="4dp"
        app:kc_mb_color="@color/chart_ma10"
        app:kc_point_width="6dp"
        app:kc_ris3_color="@color/chart_ma20"
        app:kc_rsi1_color="@color/chart_ma5"
        app:kc_rsi2_color="@color/chart_ma10"
        app:kc_selected_line_color="#B1B2B6"
        app:kc_selected_line_width="2dp"
        app:kc_selector_background_color="#c8d0d0d0"
        app:kc_selector_text_size="12sp"
        app:kc_tab_background_color="#fff"
        app:kc_tab_indicator_color="#4473b1"
        app:kc_tab_text_color="@color/tab_light_text_color_selector"
        app:kc_text_color="#787878"
        app:kc_text_size="@dimen/chart_text_size"
        app:kc_up_color="@color/chart_ma5" />
</LinearLayout>